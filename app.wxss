/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 标题 */
.h1 {
  text-align: center;
  font-size: 33px;
}

.box {
  box-sizing: border-box;
}

.h2 {
  padding-top: 15rpx;
  font-size: 22px;
  text-indent: 2em;
  font-weight: bold;
}

.h3 {
  padding-top: 15rpx;
  font-size: 17px;
  text-indent: 4em;
  font-weight: 600;
}

/* 文章 */
.article {
  text-indent: 2em;
  margin: 1em;
  font-size: 40rpx;
  letter-spacing: 0.25em;
  line-height: 1.6em;
}

/* 居中对齐 */
.textAlignCrnter {
  text-align: center;
}

/* 视频 */
.video1 {
  width: 750rpx;
  height: 562rpx;
}

/* //字体颜色 */
.fontred {
  color: red;
}

/* 底部 */
.fooster {
  padding-bottom: 30px;
}

.fontgray {
  color: gray;
  font-size: 15px;
}

.fontblue {
  color: blue;
}
